                PART_NUMBER,
                OPERATOR_ID,
                LOT_ID,
                LOT_IN_TIME,
                END_TIME,
                PROCESS_CODE,
                TESTER_NUMBER,
                TESTER_MODEL,
                HEAD,
                SBL_RESULT,

                <if test=" sblMode == 'sblYieldResult' ">
                SBL_YIELD_RESULT,
                </if>

                <if test=" sblMode == 'sblBin1Result' ">
                SBL_BIN1_RESULT,
                </if>
                <if test=" sblMode == 'sblBin2Result' ">
                SBL_BIN2_RESULT,
                </if>
                <if test=" sblMode == 'sblBin3Result' ">
                SBL_BIN3_RESULT,
                </if>
                <if test=" sblMode == 'sblBin4Result' ">
                SBL_BIN4_RESULT,
                </if>
                <if test=" sblMode == 'sblBin5Result' ">
                SBL_BIN5_RESULT,
                </if>
                <if test=" sblMode == 'sblBin6Result' ">
                SBL_BIN6_RESULT,
                </if>
                <if test=" sblMode == 'sblBin7Result' ">
                SBL_BIN7_RESULT,
                </if>
                <if test=" sblMode == 'sblBin8Result' ">
                SBL_BIN8_RESULT,
                </if>
                <if test=" sblMode == 'sblBin9Result' ">
                SBL_BIN9_RESULT,
                </if>

                <if test=" sblMode == 'all' or sblMode == '' ">
                SBL_YIELD_RESULT,
                SBL_BIN1_RESULT,
                SBL_BIN2_RESULT,
                SBL_BIN3_RESULT,
                SBL_BIN4_RESULT,
                SBL_BIN5_RESULT,
                SBL_BIN6_RESULT,
                SBL_BIN7_RESULT,
                SBL_BIN8_RESULT,
                SBL_BIN9_RESULT,
                </if>
                HANDLER_MODEL,
                BOARD_ID,
                MAIN_PROGRAM_NAME,
                TO_NUMBER(SUBSTR(OP_BIN,1,4))         + TO_NUMBER( SUBSTR(OP_BIN,6,4)) + TO_NUMBER(SUBSTR(OP_BIN,11,4)) + TO_NUMBER(SUBSTR(OP_BIN,16,4))+ TO_NUMBER(SUBSTR(OP_BIN,21,4))+ TO_NUMBER(SUBSTR(OP_BIN,26,4))+ TO_NUMBER(SUBSTR(OP_BIN,31,4))+ TO_NUMBER( SUBSTR(OP_BIN,36,4))                                                                                                                                               AS OP_INPUT ,
                TO_NUMBER(SUBSTR(OP_BIN,1,4))         + TO_NUMBER( SUBSTR(OP_BIN,6,4)) + TO_NUMBER(SUBSTR(OP_BIN,11,4)) + TO_NUMBER(SUBSTR(OP_BIN,16,4))                                                                                                                                                                                                                                                                                AS OP_PASS,
                TRUNC(((TO_NUMBER(SUBSTR(OP_BIN,1,4)) + TO_NUMBER( SUBSTR(OP_BIN,6,4)) + TO_NUMBER(SUBSTR(OP_BIN,11,4)) + TO_NUMBER(SUBSTR(OP_BIN,16,4))) / (TO_NUMBER(SUBSTR(OP_BIN,1,4)) + TO_NUMBER( SUBSTR(OP_BIN,6,4)) + TO_NUMBER(SUBSTR(OP_BIN,11,4)) + TO_NUMBER(SUBSTR(OP_BIN,16,4))+ TO_NUMBER(SUBSTR(OP_BIN,21,4))+ TO_NUMBER(SUBSTR(OP_BIN,26,4))+ TO_NUMBER(SUBSTR(OP_BIN,31,4))+ TO_NUMBER( SUBSTR(OP_BIN,36,4))))*100,2) AS OP_YIELD,
                TO_NUMBER(SUBSTR(OP_BIN,1,4))                                                                                                                                                                                                                                                                                                                                                                                           AS OP_BIN1,
                TO_NUMBER(SUBSTR(OP_BIN,6,4))                                                                                                                                                                                                                                                                                                                                                                                           AS OP_BIN2,
                TO_NUMBER(SUBSTR(OP_BIN,11,4))                                                                                                                                                                                                                                                                                                                                                                                          AS OP_BIN3,
                TO_NUMBER(SUBSTR(OP_BIN,16,4))                                                                                                                                                                                                                                                                                                                                                                                          AS OP_BIN4,
                TO_NUMBER(SUBSTR(OP_BIN,21,4))                                                                                                                                                                                                                                                                                                                                                                                          AS OP_BIN5,
                TO_NUMBER(SUBSTR(OP_BIN,26,4))                                                                                                                                                                                                                                                                                                                                                                                          AS OP_BIN6,
                TO_NUMBER(SUBSTR(OP_BIN,31,4))                                                                                                                                                                                                                                                                                                                                                                                          AS OP_BIN7,
                TO_NUMBER(SUBSTR(OP_BIN,36,4))                                                                                                                                                                                                                                                                                                                                                                                          AS OP_BIN8,
                TO_NUMBER(SUBSTR(OP_BIN,41,4))                                                                                                                                                                                                                                                                                                                                                                                          AS OP_BIN9,
                ' ' AS " ",
                TO_NUMBER(SUBSTR(HANDLER_BIN,1,4))         + TO_NUMBER( SUBSTR(HANDLER_BIN,6,4)) + TO_NUMBER(SUBSTR(HANDLER_BIN,11,4)) + TO_NUMBER(SUBSTR(HANDLER_BIN,16,4))+ TO_NUMBER(SUBSTR(HANDLER_BIN,21,4))+ TO_NUMBER(SUBSTR(HANDLER_BIN,26,4))+ TO_NUMBER(SUBSTR(HANDLER_BIN,31,4))+ TO_NUMBER( SUBSTR(HANDLER_BIN,36,4))                                                                                                            AS H_INPUT ,
                TO_NUMBER(SUBSTR(HANDLER_BIN,1,4))         + TO_NUMBER( SUBSTR(HANDLER_BIN,6,4)) + TO_NUMBER(SUBSTR(HANDLER_BIN,11,4)) + TO_NUMBER(SUBSTR(HANDLER_BIN,16,4))                                                                                                                                                                                                                                                                 AS H_PASS,
                TRUNC(((TO_NUMBER(SUBSTR(HANDLER_BIN,1,4)) + TO_NUMBER( SUBSTR(HANDLER_BIN,6,4)) + TO_NUMBER(SUBSTR(HANDLER_BIN,11,4)) + TO_NUMBER(SUBSTR(HANDLER_BIN,16,4))) / (TO_NUMBER(SUBSTR(HANDLER_BIN,1,4)) + TO_NUMBER( SUBSTR(HANDLER_BIN,6,4)) + TO_NUMBER(SUBSTR(HANDLER_BIN,11,4)) + TO_NUMBER(SUBSTR(HANDLER_BIN,16,4))+ TO_NUMBER(SUBSTR(HANDLER_BIN,21,4))+ TO_NUMBER(SUBSTR(HANDLER_BIN,26,4))+ TO_NUMBER(SUBSTR(HANDLER_BIN,31,4))+ TO_NUMBER( SUBSTR(HANDLER_BIN,36,4))))*100,2) AS H_YIELD,
                TO_NUMBER(SUBSTR(HANDLER_BIN,1,4))                                                                                                                                                                                                                                                                                                                                                                                           AS H_BIN1,
                TO_NUMBER(SUBSTR(HANDLER_BIN,6,4))                                                                                                                                                                                                                                                                                                                                                                                           AS H_BIN2,
                TO_NUMBER(SUBSTR(HANDLER_BIN,11,4))                                                                                                                                                                                                                                                                                                                                                                                          AS H_BIN3,
                TO_NUMBER(SUBSTR(HANDLER_BIN,16,4))                                                                                                                                                                                                                                                                                                                                                                                          AS H_BIN4,
                TO_NUMBER(SUBSTR(HANDLER_BIN,21,4))                                                                                                                                                                                                                                                                                                                                                                                          AS H_BIN5,
                TO_NUMBER(SUBSTR(HANDLER_BIN,26,4))                                                                                                                                                                                                                                                                                                                                                                                          AS H_BIN6,
                TO_NUMBER(SUBSTR(HANDLER_BIN,31,4))                                                                                                                                                                                                                                                                                                                                                                                          AS H_BIN7,
                TO_NUMBER(SUBSTR(HANDLER_BIN,36,4))                                                                                                                                                                                                                                                                                                                                                                                          AS H_BIN8,
                TO_NUMBER(SUBSTR(HANDLER_BIN,41,4))                                                                                                                                                                                                                                                                                                                                                                                          AS H_BIN9,
                ' ' AS " ",
                TO_NUMBER(SUBSTR(TEST_BIN,1,4))         + TO_NUMBER( SUBSTR(TEST_BIN,6,4)) + TO_NUMBER(SUBSTR(TEST_BIN,11,4)) + TO_NUMBER(SUBSTR(TEST_BIN,16,4))+ TO_NUMBER(SUBSTR(TEST_BIN,21,4))+ TO_NUMBER(SUBSTR(TEST_BIN,26,4))+ TO_NUMBER(SUBSTR(TEST_BIN,31,4))+ TO_NUMBER( SUBSTR(TEST_BIN,36,4))                                                                                                                                 AS T_INPUT ,
                TO_NUMBER(SUBSTR(TEST_BIN,1,4))         + TO_NUMBER( SUBSTR(TEST_BIN,6,4)) + TO_NUMBER(SUBSTR(TEST_BIN,11,4)) + TO_NUMBER(SUBSTR(TEST_BIN,16,4))                                                                                                                                                                                                                                                                          AS T_PASS,
                TRUNC(((TO_NUMBER(SUBSTR(TEST_BIN,1,4)) + TO_NUMBER( SUBSTR(TEST_BIN,6,4)) + TO_NUMBER(SUBSTR(TEST_BIN,11,4)) + TO_NUMBER(SUBSTR(TEST_BIN,16,4))) / (TO_NUMBER(SUBSTR(TEST_BIN,1,4)) + TO_NUMBER( SUBSTR(TEST_BIN,6,4)) + TO_NUMBER(SUBSTR(TEST_BIN,11,4)) + TO_NUMBER(SUBSTR(TEST_BIN,16,4))+ TO_NUMBER(SUBSTR(TEST_BIN,21,4))+ TO_NUMBER(SUBSTR(TEST_BIN,26,4))+ TO_NUMBER(SUBSTR(TEST_BIN,31,4))+ TO_NUMBER( SUBSTR(TEST_BIN,36,4))))*100,2) AS T_YIELD,
                TO_NUMBER(SUBSTR(TEST_BIN,1,4))                                                                                                                                                                                                                                                                                                                                                                                           AS T_BIN1,
                TO_NUMBER(SUBSTR(TEST_BIN,6,4))                                                                                                                                                                                                                                                                                                                                                                                           AS T_BIN2,
                TO_NUMBER(SUBSTR(TEST_BIN,11,4))                                                                                                                                                                                                                                                                                                                                                                                          AS T_BIN3,
                TO_NUMBER(SUBSTR(TEST_BIN,16,4))                                                                                                                                                                                                                                                                                                                                                                                          AS T_BIN4,
                TO_NUMBER(SUBSTR(TEST_BIN,21,4))                                                                                                                                                                                                                                                                                                                                                                                          AS T_BIN5,
                TO_NUMBER(SUBSTR(TEST_BIN,26,4))                                                                                                                                                                                                                                                                                                                                                                                          AS T_BIN6,
                TO_NUMBER(SUBSTR(TEST_BIN,31,4))                                                                                                                                                                                                                                                                                                                                                                                          AS T_BIN7,
                TO_NUMBER(SUBSTR(TEST_BIN,36,4))                                                                                                                                                                                                                                                                                                                                                                                          AS T_BIN8,
                TO_NUMBER(SUBSTR(TEST_BIN,41,4))                                                                                                                                                                                                                                                                                                                                                                                          AS T_BIN9
        FROM
              MAIN_BIN
        <where>
            1 = 1
            AND SBL_RESULT = 'ERROR'
            <if test=" endTimeStart != null and endTimeStart != '' ">
                AND END_TIME >= #{endTimeStart}
            </if>
            <if test=" endTimeEnd != null and endTimeEnd != '' ">
                AND END_TIME <![CDATA[<=]]> #{endTimeEnd}
            </if>
            <if test=" partNumber != null and partNumber != '' ">
                AND PART_NUMBER=#{partNumber}
            </if>
            <if test=" processCode != null and processCode != '' ">
                AND PROCESS_CODE=#{processCode}
            </if>
            <if test=" testerModel != null and testerModel != '' ">
                AND TESTER_MODEL=#{testerModel}
            </if>
            <if test=" testerNumber != null and testerNumber != '' ">
                AND TESTER_NUMBER=#{testerNumber}
            </if>
            <if test=" head != null and head != '' ">
                AND HEAD=#{head}
            </if>
            <if test=" lotId != null and lotId != '' ">
                AND LOT_ID=#{lotId}
            </if>
            <if test=" mainProgramName != null and mainProgramName != '' ">
                AND MAIN_PROGRAM_NAME=#{mainProgramName}
            </if>
            <if test=" boardId != null and boardId != '' ">
                AND BOARD_ID=#{boardId}
            </if>
            <if test=" sblMode == 'sblYieldResult' ">
                AND SBL_YIELD_RESULT = 'ERROR'
            </if>
            <if test=" sblMode == 'sblBin1Result' ">
                AND SBL_BIN1_RESULT = 'ERROR'
            </if>
            <if test=" sblMode == 'sblBin2Result' ">
                AND SBL_BIN2_RESULT = 'ERROR'
            </if>
            <if test=" sblMode == 'sblBin3Result' ">
                AND SBL_BIN3_RESULT = 'ERROR'
            </if>
            <if test=" sblMode == 'sblBin4Result' ">
                AND SBL_BIN4_RESULT = 'ERROR'
            </if>
            <if test=" sblMode == 'sblBin5Result' ">
                AND SBL_BIN5_RESULT = 'ERROR'
            </if>
            <if test=" sblMode == 'sblBin6Result' ">
                AND SBL_BIN6_RESULT = 'ERROR'
            </if>
            <if test=" sblMode == 'sblBin7Result' ">
                AND SBL_BIN7_RESULT = 'ERROR'
            </if>
            <if test=" sblMode == 'sblBin8Result' ">
                AND SBL_BIN8_RESULT = 'ERROR'
            </if>
            <if test=" sblMode == 'sblBin9Result' ">
                AND SBL_BIN9_RESULT = 'ERROR'
            </if>
        </where>
    </select>
</mapper>
