<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.famos.bets.sblAnalysis.yieldAbnormal.mapper.YieldAbnormalMapper">
    <select id="retrieveYieldAbnormal" parameterType="kr.famos.bets.sblAnalysis.yieldAbnormal.dto.YieldAbnormalDto" resultType="kr.famos.bets.sblAnalysis.yieldAbnormal.dto.YieldAbnormalDto">
