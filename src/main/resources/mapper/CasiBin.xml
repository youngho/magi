<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.famos.bets.">
    <select id="retrieveCasiBin" parameterType="kr.famos.bets.dutmap.CasiBinDto" resultType="kr.famos.bets.dutmap.CasiBinDto">
        SELECT
            PART_NUMBER,
            MAIN_PROGRAM_NAME,
            PROCESS_CODE,
            TESTER_MODEL,
            ITEM_NAME,
            MAIN_BIN,
            SUB_BIN,
            NG_BIN
        FROM BIN_DESCRIPTION
        <where>
            1 = 1
            <if test=" partNumber != null and partNumber != '' ">
                AND PART_NUMBER=#{partNumber}
            </if>
            <if test=" mainProgramName != null and mainProgramName != '' ">
                AND MAIN_PROGRAM_NAME=#{mainProgramName}
            </if>
            <if test=" processCode != null and processCode != '' ">
                AND PROCESS_CODE=#{processCode}
            </if>
            <if test=" testerModel != null and testerModel != '' ">
                AND TESTER_MODEL=#{testerModel}
            </if>
            <if test=" itemName != null and itemName != '' ">
                AND ITEM_NAME=#{itemName}
            </if>
            <if test=" mainBin != null and mainBin != '' ">
                AND MAIN_BIN=#{mainBin}
            </if>
            <if test=" subBin != null and subBin != '' ">
                AND SUB_BIN=#{subBin}
            </if>
            <if test=" ngBin != null and ngBin != '' ">
                AND NG_BIN=#{ngBin}
            </if>
        </where>
    </select>
</mapper>
