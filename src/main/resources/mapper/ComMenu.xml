<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.famos.com.mapper.ComMenuMapper">
    <!--BETS-UI-MENU
    메뉴를 권한에 따라 동적으로 생성하기 위한 쿼리
    권한에 해당하는 메뉴그룹을 먼저 조회한다.-->
    <select id="retrieveMenuGroups" parameterType="String" resultType="kr.famos.com.dto.ComMenuDto">
        SELECT
              *
        FROM
              COM_MENU
        WHERE
              GROUP_ID = 0
    </select>
    <select id="retrieveMenuItems" parameterType="kr.famos.com.dto.ComMenuDto" resultType="kr.famos.com.dto.MenuItemDto">
        SELECT
              MENU_NM  AS TEXT,
              MENU_URL AS URL,
              MENU_NM  AS ALIAS
        FROM
              COM_MENU
        WHERE
              GROUP_ID = #{comMenuId}
    </select>
</mapper>
